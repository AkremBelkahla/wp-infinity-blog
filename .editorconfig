# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# 2 space indentation for specific files
[{package.json,*.yml,*.yaml,*.scss,*.css}]
indent_size = 2

# Tab indentation for PHP files (WordPress coding standards)
[*.php]
indent_style = tab
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false

# HTML files
[*.{html,htm}]
indent_size = 2

# JavaScript files
[*.js]
indent_size = 2
