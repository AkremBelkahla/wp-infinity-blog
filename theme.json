{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "palette": [
        {
          "slug": "primary",
          "color": "#2563eb",
          "name": "Primary"
        },
        {
          "slug": "primary-hover",
          "color": "#1d4ed8",
          "name": "Primary Hover"
        },
        {
          "slug": "primary-light",
          "color": "#dbeafe",
          "name": "Primary Light"
        },
        {
          "slug": "secondary",
          "color": "#1e40af",
          "name": "Secondary"
        },
        {
          "slug": "text",
          "color": "#1f2937",
          "name": "Text"
        },
        {
          "slug": "text-muted",
          "color": "#6b7280",
          "name": "Text Muted"
        },
        {
          "slug": "text-light",
          "color": "#9ca3af",
          "name": "Text Light"
        },
        {
          "slug": "bg-primary",
          "color": "#ffffff",
          "name": "Background Primary"
        },
        {
          "slug": "bg-secondary",
          "color": "#f9fafb",
          "name": "Background Secondary"
        },
        {
          "slug": "bg-tertiary",
          "color": "#f3f4f6",
          "name": "Background Tertiary"
        },
        {
          "slug": "border",
          "color": "#e5e7eb",
          "name": "Border"
        }
      ],
      "gradients": [],
      "custom": true,
      "customGradient": true,
      "defaultPalette": false,
      "defaultGradients": false
    },
    "typography": {
      "fontSizes": [
        {
          "slug": "small",
          "size": "0.875rem",
          "name": "Small"
        },
        {
          "slug": "normal",
          "size": "1rem",
          "name": "Normal"
        },
        {
          "slug": "medium",
          "size": "1.125rem",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "1.25rem",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "1.5rem",
          "name": "X-Large"
        },
        {
          "slug": "xx-large",
          "size": "2rem",
          "name": "XX-Large"
        },
        {
          "slug": "xxx-large",
          "size": "2.5rem",
          "name": "XXX-Large"
        }
      ],
      "fontFamilies": [
        {
          "fontFamily": "Inter, ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
          "slug": "sans",
          "name": "Sans-serif"
        },
        {
          "fontFamily": "'JetBrains Mono', 'Fira Code', 'SFMono-Regular', Consolas, 'Liberation Mono', Menlo, monospace",
          "slug": "mono",
          "name": "Monospace"
        }
      ],
      "lineHeight": true,
      "dropCap": true,
      "fontWeight": true,
      "fontStyle": true,
      "textTransform": true,
      "letterSpacing": true,
      "textDecoration": true
    },
    "spacing": {
      "units": ["px", "em", "rem", "%", "vh", "vw"],
      "padding": true,
      "margin": true,
      "blockGap": true
    },
    "layout": {
      "contentSize": "800px",
      "wideSize": "1200px"
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "custom": {
      "spacing": {
        "1": "0.25rem",
        "2": "0.5rem",
        "3": "0.75rem",
        "4": "1rem",
        "5": "1.25rem",
        "6": "1.5rem",
        "8": "2rem",
        "10": "2.5rem",
        "12": "3rem"
      },
      "shadow": {
        "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
        "default": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
        "md": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
        "lg": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)"
      },
      "transition": {
        "fast": "150ms cubic-bezier(0.4, 0, 0.2, 1)",
        "default": "250ms cubic-bezier(0.4, 0, 0.2, 1)",
        "slow": "350ms cubic-bezier(0.4, 0, 0.2, 1)"
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--bg-primary)",
      "text": "var(--wp--preset--color--text)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--sans)",
      "fontSize": "var(--wp--preset--font-size--normal)",
      "lineHeight": "1.6"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--primary-hover)"
          },
          "typography": {
            "textDecoration": "underline"
          }
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xxx-large)",
          "lineHeight": "1.25",
          "fontWeight": "700"
        },
        "spacing": {
          "margin": {
            "bottom": "1rem"
          }
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "lineHeight": "1.25",
          "fontWeight": "700"
        },
        "spacing": {
          "margin": {
            "bottom": "1rem"
          }
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "lineHeight": "1.25",
          "fontWeight": "700"
        },
        "spacing": {
          "margin": {
            "bottom": "1rem"
          }
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "lineHeight": "1.25",
          "fontWeight": "700"
        },
        "spacing": {
          "margin": {
            "bottom": "1rem"
          }
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "lineHeight": "1.25",
          "fontWeight": "700"
        },
        "spacing": {
          "margin": {
            "bottom": "1rem"
          }
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--normal)",
          "lineHeight": "1.25",
          "fontWeight": "700"
        },
        "spacing": {
          "margin": {
            "bottom": "1rem"
          }
        }
      }
    },
    "blocks": {
      "core/paragraph": {
        "spacing": {
          "margin": {
            "bottom": "1.25rem"
          }
        }
      },
      "core/button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "white"
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--normal)",
          "fontWeight": "600"
        },
        "border": {
          "radius": "0.5rem"
        },
        "spacing": {
          "padding": {
            "top": "0.625rem",
            "right": "1.5rem",
            "bottom": "0.625rem",
            "left": "1.5rem"
          }
        }
      },
      "core/image": {
        "spacing": {
          "margin": {
            "bottom": "1.5rem"
          }
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    },
    {
      "name": "sidebar",
      "title": "Sidebar",
      "area": "uncategorized"
    }
  ],
  "customTemplates": [
    {
      "name": "page-no-sidebar",
      "title": "Page sans barre lat√©rale",
      "postTypes": ["page"]
    },
    {
      "name": "page-full-width",
      "title": "Page pleine largeur",
      "postTypes": ["page"]
    }
  ]
}
